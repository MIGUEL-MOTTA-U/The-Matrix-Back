generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql" // Cambia esto según tu base de datos
  url      = env("DB_URI")
}

enum Role {
  USER
  ADMIN
}

enum PlayerRole {
  HOST
  GUEST
}

model User {
  id       String    @id @default(cuid())
  color    String    @default("coffee")
  name     String    @default("Anonymous")
  role     Role      @default(USER)

  // Time stamps
  
  // Relación para los juegos en los que participa
  playerMatches PlayerMatch[]

  createdAt DateTime @default(now())
  expiredAt DateTime? // Fecha de expiración de la cuenta
  updatedAt DateTime @updatedAt
}

model Match {
  id        String       @id @default(cuid())
  
  
  // Relación con los jugadores
  players   PlayerMatch[]
  
  // Opcional: estado de la partida
  status    String       @default("waiting") // waiting, active, finished
  
  // Time stamps
  createdAt DateTime @default(now())
  expiredAt DateTime? // Fecha de expiración de la cuenta
  updatedAt DateTime @updatedAt
}

model PlayerMatch {
  id        String     @id @default(cuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  match     Match      @relation(fields: [matchId], references: [id])
  matchId   String
  role      PlayerRole // HOST o GUEST

  // Time stamps
  createdAt DateTime @default(now())
  expiredAt DateTime? // Fecha de expiración de la cuenta
  updatedAt DateTime @updatedAt
  
  @@unique([userId, matchId])
}